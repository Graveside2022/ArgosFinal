{
	"name": "argos-final",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"validate:env": "node src/lib/server/validate-env.js",
		"dev": "npm run validate:env && ./scripts/vite-manager.sh",
		"build": "npm run validate:env && vite build",
		"preview": "npm run validate:env && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint . --ext .js,.ts,.svelte",
		"lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install",
		"framework:check-css": "node scripts/css-integrity-check.js",
		"framework:check-html": "node scripts/html-structure-validator.js",
		"framework:check-visual": "node scripts/visual-regression-check.js",
		"framework:generate-baselines": "node scripts/css-integrity-check.js --generate-baselines && node scripts/html-structure-validator.js --generate-baselines",
		"framework:generate-visual-baselines": "node scripts/visual-regression-check.js --generate-baseline",
		"framework:validate-all": "npm run framework:check-css && npm run framework:check-html",
		"framework:full-check": "npm run framework:validate-all && npm run framework:check-visual",
		"framework:install": "bash scripts/install-framework.sh",
		"test": "vitest",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:visual": "vitest run tests/visual",
		"test:performance": "vitest run tests/performance",
		"db:migrate": "tsx src/lib/database/runMigrations.ts",
		"db:rollback": "tsx src/lib/database/rollbackMigration.ts",
		"test:e2e": "playwright test",
		"test:smoke": "playwright test tests/e2e/smoke.test.ts",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:visual:generate": "vitest run tests/visual -- --generate-baselines",
		"test:all": "npm run test:unit && npm run test:integration && npm run test:visual && npm run test:performance"
	},
	"devDependencies": {
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.3",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/dotenv": "^6.1.1",
		"@types/node": "^24.0.12",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"better-sqlite3": "^12.2.0",
		"css-tree": "^3.1.0",
		"db-migrate": "^0.11.14",
		"db-migrate-sqlite3": "^1.0.2",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"puppeteer": "^24.12.1",
		"svelte": "^5.35.5",
		"svelte-check": "^4.2.2",
		"svelte-eslint-parser": "^1.2.0",
		"tailwindcss": "^4.0.0",
		"terser": "^5.43.1",
		"tslib": "^2.8.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^7.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@deck.gl/core": "^9.1.12",
		"@deck.gl/layers": "^9.1.12",
		"@eslint/js": "^9.30.1",
		"@tailwindcss/forms": "^0.5.10",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cytoscape": "^3.21.9",
		"@types/leaflet": "^1.9.19",
		"@types/leaflet.markercluster": "^1.5.5",
		"cytoscape": "^3.32.0",
		"cytoscape-cola": "^2.5.1",
		"cytoscape-dagre": "^2.5.0",
		"deck.gl": "^9.1.12",
		"globals": "^16.3.0",
		"leaflet": "^1.9.4",
		"leaflet.heat": "^0.2.0",
		"leaflet.markercluster": "^1.5.3",
		"maplibre-gl": "^5.6.1",
		"ws": "^8.18.3",
		"zod": "^3.25.76"
	}
}
